{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of Gun Violence Incident per State in US",
    "width": 800,
    "height": 400,
    "projection": {"type": "albersUsa"},
    "data": {
      "url": "https://raw.githubusercontent.com/Chokss54/Gun-Violence-in-US-Visualization/main/US_map1.json",
      "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Chokss54/Gun-Violence-in-US-Visualization/main/total%20gun%20incidents%20updated.csv",
            "format": {"type": "csv"}
          },
          "key": "unique_state",
          "fields": ["n_incident"]
        }
      },
      {"calculate": "datum.Active + 0.1", "as": "number of incident"}
    ],
    "mark": {"type": "geoshape",
      "stroke": "#757575",
      "strokeWidth": 0.5},
    "encoding": {
      "color": {
        "field": "n_incident",
        "type": "quantitative",
        "scale": {"type": "log"
        }
        
      }
      ,
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "state"},
        {"field": "n_incident", "type": "quantitative", "title": "number of incident"}
      ]
    }
  }